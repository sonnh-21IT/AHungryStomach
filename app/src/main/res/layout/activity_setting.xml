<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/actionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_color"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_5sdp"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:src="@drawable/ic_arrow"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:gravity="center"
                        android:text="About Me"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18ssp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_bar"
            android:background="@drawable/back_profile">
            <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_175sdp"
                android:orientation="vertical"
                android:weightSum="10">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:scaleType="centerCrop"
                    android:src="@drawable/man"
                    android:layout_margin="@dimen/_5sdp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="21">
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_weight="10"
                        android:layout_width="0dp"
                        android:text="PHONE: 0984399784"
                        android:textColor="@color/white"
                        android:gravity="center|right"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="|"
                        android:textSize="@dimen/_25ssp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_weight="10"
                        android:layout_width="0dp"
                        android:text="NAME: SON"
                        android:textColor="@color/white"
                        android:gravity="center|left"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:padding="@dimen/_10ssp"
            app:layout_constraintTop_toBottomOf="@id/pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <androidx.cardview.widget.CardView
                android:id="@+id/to_cart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/background_btncheckout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:weightSum="10">
                    <ImageView
                        android:padding="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="8"
                        android:src="@drawable/ic_shopping_cart"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Cart"
                        android:textStyle="bold"
                        android:layout_weight="2"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/to_order"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/background_btncheckout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:weightSum="10">
                    <ImageView
                        android:padding="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="8"
                        app:tint="@color/main_color"
                        android:src="@drawable/ic_history_order"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Order"
                        android:textStyle="bold"
                        android:layout_weight="2"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/to_logout"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/background_btncheckout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:weightSum="10">
                    <ImageView
                        android:padding="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="8"
                        app:tint="@color/main_color"
                        android:src="@drawable/ic_power"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LogOut"
                        android:textStyle="bold"
                        android:layout_weight="2"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>